<div class="jumbotron">
  <h2>Listing pins</h2>
  <div class="panel-heading"> 
    <table>
      <thead>
        <tr>
          <th>Description</th>
          <th>User</th>
          <th></th>
          <th></th>
          <th></th>
        </tr>
      </thead>
        <tbody>
          <% @pins.each do |pin| %>
          <tr>
            <td><%= pin.description %></td>
            <td><%= pin.user.email if pin.user %></td>
            <td><%= link_to 'Show', pin, class: "btn btn-primary" %></td>
              <% if pin.user == current_user %>
              <td><%= link_to 'Edit', edit_pin_path(pin), class: "btn btn-info" %></td>
              <td><%= link_to 'Destroy', pin, class: "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
              <% end %>
          </tr>
          <% end %>
        </tbody>
    </table>
  </div>

  <br>
  <% if user_signed_in? %>
    <%= link_to 'New Pin', new_pin_path, class: "btn btn-success" %>
  <% end %>
  </div>
</div>
